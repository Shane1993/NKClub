<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:background="#f5f5f5"
              android:orientation="horizontal"
              android:paddingLeft="10dp"
              android:gravity="center_vertical"
    >


    <CheckBox
        android:id="@+id/cb_shopcart_select_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/iv_shopcart_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/default_picture"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/tv_shopcart_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="name"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/price"
                android:gravity="bottom"
                android:textSize="19sp"
                android:textColor="@color/colorPayText"

                />

            <TextView
                android:id="@+id/tv_shopcart_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5.00"
                android:gravity="bottom"
                android:textSize="19sp"
                android:textColor="@color/colorPayText"

                />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        >

        <Button
            android:id="@+id/btn_shopcart_decrease"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/background_button_gray_stroke"
            android:text="â€”"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/btn_shopcart_number"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/background_button_gray_stroke"
            android:gravity="center"
            android:text="1"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/btn_shopcart_increase"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/background_button_gray_stroke"
            android:text="+"
            android:textSize="18sp"
            />


    </LinearLayout>

</LinearLayout>